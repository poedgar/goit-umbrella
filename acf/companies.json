{
  "key": "group_company_sites",
  "title": "Company Sites",
  "fields": [
    {
      "key": "field_company_sites",
      "label": "Sites",
      "name": "sites",
      "type": "repeater",
      "instructions": "Add one or more websites belonging to this company.",
      "min": 0,
      "layout": "row",
      "button_label": "Add Site",
      "sub_fields": [
        {
          "key": "field_site_name",
          "label": "Site Name",
          "name": "name",
          "type": "text",
          "placeholder": "GoIT",
          "required": 1
        },
        {
          "key": "field_site_url",
          "label": "Site URL",
          "name": "url",
          "type": "url",
          "placeholder": "https://example.com",
          "required": 1
        },
        {
          "key": "field_social_group",
          "label": "Social Media Links",
          "name": "social",
          "type": "group",
          "layout": "block",
          "sub_fields": [
            {
              "key": "field_site_mail",
              "label": "Mail",
              "name": "mail",
              "type": "email",
              "placeholder": "goit@gmail.com"
            },
            {
              "key": "field_site_facebook",
              "label": "Facebook",
              "name": "facebook",
              "type": "url",
              "placeholder": "https://facebook.com/yourpage"
            },
            {
              "key": "field_site_twitter",
              "label": "Twitter/X",
              "name": "twitter",
              "type": "url",
              "placeholder": "https://twitter.com/yourhandle"
            },
            {
              "key": "field_site_instagram",
              "label": "Instagram",
              "name": "instagram",
              "type": "url",
              "placeholder": "https://instagram.com/yourhandle"
            },
            {
              "key": "field_site_linkedin",
              "label": "LinkedIn",
              "name": "linkedin",
              "type": "url",
              "placeholder": "https://linkedin.com/company/yourcompany"
            },
            {
              "key": "field_site_youtube",
              "label": "YouTube",
              "name": "youtube",
              "type": "url",
              "placeholder": "https://youtube.com/@yourchannel"
            }
          ]
        }
      ]
    }
  ],
  "location": [
    [
      {
        "param": "post_type",
        "operator": "==",
        "value": "companies"
      }
    ]
  ],
  "menu_order": 0,
  "position": "normal",
  "style": "default",
  "label_placement": "top",
  "instruction_placement": "label",
  "active": true,
  "description": "Each company can have one or more websites with social media links."
